{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "packages": {
    "node": "20"
  },
  "caches": {
    "pnpm-store": {
      "directory": "/root/.local/share/pnpm/store",
      "type": "shared"
    }
  },
  "steps": {
    "install": {
      "commands": [
        "corepack enable",
        "corepack prepare pnpm@latest --activate",
        "pnpm install --frozen-lockfile"
      ],
      "caches": ["pnpm-store"]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": [
        "pnpm run build"
      ]
    }
  },
  "deploy": {
    "startCommand": "pnpm start",
    "inputs": [
      { "step": "build", "include": [".next", "public", "package.json", "pnpm-lock.yaml"] }
    ]
  }
}
