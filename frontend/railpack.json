{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "packages": {
    "node": "20"
  },
  "caches": {
    "pnpm-store": {
      "directory": "/root/.local/share/pnpm/store",
      "type": "shared"
    }
  },
  "steps": {
    "install": {
      "commands": [
        "cd frontend && corepack enable",
        "cd frontend && corepack prepare pnpm@latest --activate",
        "cd frontend && pnpm install --frozen-lockfile"
      ],
      "caches": ["pnpm-store"]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": [
        "cd frontend && pnpm run build"
      ]
    }
  },
  "deploy": {
    "startCommand": "cd frontend && pnpm start",
    "inputs": [
      { "step": "build", "include": ["frontend/.next", "frontend/public", "frontend/package.json", "frontend/pnpm-lock.yaml"] }
    ]
  }
}
